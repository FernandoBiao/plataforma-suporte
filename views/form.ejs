<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Abrir Chamado</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
    }

    .form-wrapper {
      background-color: #ffffff;
      border-radius: 16px;
      padding: 40px;
      max-width: 600px;
      width: 100%;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.07);
    }

    h2 {
      font-weight: 600;
      color: #111827;
      margin-bottom: 30px;
      text-align: center;
    }

    label {
      font-weight: 500;
      margin-bottom: 6px;
    }

    .form-control,
    .form-select {
      border-radius: 10px;
      padding: 10px 14px;
      font-size: 15px;
    }

    .form-control:focus,
    .form-select:focus {
      border-color: #6366f1;
      box-shadow: 0 0 0 0.2rem rgba(99, 102, 241, 0.25);
    }

    textarea.form-control {
      resize: vertical;
    }

    .btn-primary {
      background-color: #6366f1;
      border: none;
      font-weight: 500;
      font-size: 16px;
      padding: 12px;
      border-radius: 12px;
      transition: background-color 0.2s;
    }

    .btn-primary:hover {
      background-color: #4f46e5;
    }

    .form-group {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="form-wrapper">
    <h2>Abrir Chamado</h2>
    <form action="/criar-chamado" method="POST">
      <div class="form-group">
        <label for="nome">Nome</label>
        <input
          type="text"
          class="form-control"
          id="nome"
          name="nome"
          placeholder="Digite seu nome"
          required
        />
      </div>

      <div class="form-group">
        <label for="email">E-mail</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="exemplo@empresa.com"
          required
        />
      </div>

      <div class="form-group">
        <label for="assunto">Assunto</label>
        <select class="form-select" id="assunto" name="assunto" required>
          <option value="">Selecione um assunto</option>
          <option value="Pedidos">Pedidos</option>
          <option value="Produto/Anúncio">Produto/Anúncio</option>
        </select>
      </div>

      <div class="form-group">
        <label for="subAssunto">Tipo de Solicitação</label>
        <select class="form-select" id="subAssunto" name="subAssunto" required>
          <option value="">Selecione um tipo</option>
        </select>
      </div>

      <div class="form-group">
        <label for="prioridade">Prioridade</label>
        <input
          type="text"
          class="form-control"
          id="prioridade"
          name="prioridade"
          readonly
          placeholder="Selecionada automaticamente"
        />
      </div>

      <div class="form-group">
        <label for="descricao">Descrição</label>
        <textarea
          class="form-control"
          id="descricao"
          name="descricao"
          rows="5"
          placeholder="Descreva o problema ou solicitação"
          required
        ></textarea>
      </div>

      <button type="submit" class="btn btn-primary w-100">Enviar Chamado</button>
    </form>
  </div>

  <script>
    const assuntoSelect = document.getElementById('assunto');
    const subAssuntoSelect = document.getElementById('subAssunto');
    const prioridadeInput = document.getElementById('prioridade');

    const options = {
      Pedidos: {
        'Integração de Pedidos': 'Alta',
        'Dúvidas / Auxílio': 'Baixa',
      },
      'Produto/Anúncio': {
        'Vínculo de produto/anúncio com erro': 'Média',
        'Dúvidas / Auxílio': 'Baixa',
      },
    };

    assuntoSelect.addEventListener('change', function () {
      const assunto = this.value;
      subAssuntoSelect.innerHTML = '<option value="">Selecione um tipo</option>';
      prioridadeInput.value = '';

      if (assunto && options[assunto]) {
        Object.entries(options[assunto]).forEach(([sub, prioridade]) => {
          const opt = document.createElement('option');
          opt.value = sub;
          opt.textContent = sub;
          subAssuntoSelect.appendChild(opt);
        });
      }
    });

    subAssuntoSelect.addEventListener('change', function () {
      const assunto = assuntoSelect.value;
      const sub = this.value;
      if (options[assunto] && options[assunto][sub]) {
        prioridadeInput.value = options[assunto][sub];
      } else {
        prioridadeInput.value = '';
      }
    });
  </script>
</body>
</html>

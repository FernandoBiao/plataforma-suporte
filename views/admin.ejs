<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Chamados Recebidos</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background-color: #f3f4f6;
      padding: 40px 20px;
    }

    .container {
      background-color: #ffffff;
      padding: 30px;
      border-radius: 16px;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.06);
    }

    h2 {
      font-weight: 600;
      color: #111827;
      margin-bottom: 30px;
      text-align: center;
    }

    table {
      font-size: 15px;
    }

    .priority-Alta {
      background-color: #ef4444;
      color: white;
      padding: 4px 10px;
      border-radius: 12px;
      font-weight: 500;
    }

    .priority-Média {
      background-color: #f59e0b;
      color: white;
      padding: 4px 10px;
      border-radius: 12px;
      font-weight: 500;
    }

    .priority-Baixa {
      background-color: #10b981;
      color: white;
      padding: 4px 10px;
      border-radius: 12px;
      font-weight: 500;
    }

    @media (max-width: 768px) {
      table {
        font-size: 13px;
      }

      h2 {
        font-size: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <h2>Chamados Recebidos</h2>
    <div class="table-responsive">
      <table class="table table-bordered align-middle table-hover">
        <thead class="table-light">
          <tr>
            <th>Data</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Assunto</th>
            <th>Tipo</th>
            <th>Prioridade</th>
            <th>Descrição</th>
          </tr>
        </thead>
        <tbody>
          <% chamados.forEach(function(chamado) { %>
            <tr>
              <td><%= new Date(chamado.createdAt).toLocaleString('pt-BR') %></td>
              <td><%= chamado.name %></td>
              <td><%= chamado.email %></td>
              <td><%= chamado.subject %></td>
              <td><%= chamado.subSubject %></td>
              <td><span class="priority-<%= chamado.priority %>"><%= chamado.priority %></span></td>
              <td><%= chamado.description %></td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>

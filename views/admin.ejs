<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <title>Admin - Chamados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <style>
    body { background-color: #f4f4f4; padding-top: 50px; }
    .container { max-width: 1000px; }
  </style>
</head>
<body>
  <div class="container">
    <h2 class="mb-4 text-center">Painel de Chamados</h2>

    <% if (chamados.length === 0) { %>
      <p class="text-center">Nenhum chamado aberto.</p>
    <% } else { %>
      <table class="table table-bordered table-striped">
        <thead class="table-dark">
          <tr>
            <th>ID</th>
            <th>Nome</th>
            <th>E-mail</th>
            <th>Assunto</th>
            <th>Categoria</th>
            <th>Descrição</th>
            <th>Prioridade</th>
            <th>Status</th>
            <th>Data</th>
            <th>Ação</th>
          </tr>
        </thead>
        <tbody>
          <% chamados.forEach(chamado => { %>
            <tr>
              <td><%= chamado.id %></td>
              <td><%= chamado.nome %></td>
              <td><%= chamado.email %></td>
              <td><%= chamado.assunto %></td>
              <td><%= chamado.subAssunto %></td>
              <td><%= chamado.descricao %></td>
              <td><%= chamado.prioridade %></td>
              <td><%= chamado.status %></td>
              <td><%= chamado.dataCriacao %></td>
              <td>
                <form method="POST" action="/atualizar-status">
                  <input type="hidden" name="id" value="<%= chamado.id %>">
                  <select name="status" class="form-select form-select-sm mb-1">
                    <option <%= chamado.status === 'Aberto' ? 'selected' : '' %>>Aberto</option>
                    <option <%= chamado.status === 'Em análise' ? 'selected' : '' %>>Em análise</option>
                    <option <%= chamado.status === 'Em espera' ? 'selected' : '' %>>Em espera</option>
                    <option <%= chamado.status === 'Concluído' ? 'selected' : '' %>>Concluído</option>
                  </select>
                  <button type="submit" class="btn btn-sm btn-outline-primary w-100">Atualizar</button>
                </form>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>

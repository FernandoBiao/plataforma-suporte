<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Admin - Chamados</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: 'Inter', sans-serif;
      background: linear-gradient(135deg, #e0e7ff, #c7d2fe);
      min-height: 100vh;
      padding: 30px;
    }
    h1 {
      text-align: center;
      margin-bottom: 40px;
      color: #3730a3;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 8px 16px rgba(55, 48, 163, 0.15);
    }
    thead {
      background-color: #4f46e5;
      color: white;
    }
    th, td {
      padding: 14px 16px;
      text-align: left;
      border-bottom: 1px solid #ddd;
      vertical-align: top;
    }
    tr:hover {
      background-color: #f3f4f6;
    }
    select, textarea {
      width: 100%;
      padding: 8px 12px;
      font-size: 14px;
      border-radius: 8px;
      border: 1px solid #ccc;
      font-family: 'Inter', sans-serif;
      resize: vertical;
    }
    textarea {
      min-height: 50px;
    }
    button.btn-update {
      background-color: #6366f1;
      border: none;
      color: white;
      padding: 8px 12px;
      border-radius: 8px;
      cursor: pointer;
      transition: background-color 0.2s;
      font-weight: 600;
    }
    button.btn-update:hover {
      background-color: #4f46e5;
    }
    .history {
      font-size: 13px;
      color: #555;
      margin-top: 10px;
      max-height: 150px;
      overflow-y: auto;
      background: #f9fafb;
      padding: 10px;
      border-radius: 8px;
    }
    .history-entry {
      margin-bottom: 8px;
      border-bottom: 1px solid #ddd;
      padding-bottom: 4px;
    }
    .history-entry:last-child {
      border-bottom: none;
    }
  </style>
</head>
<body>
  <h1>Chamados - Administração</h1>

  <table>
    <thead>
      <tr>
        <th>Data Criação</th>
        <th>Nome</th>
        <th>E-mail</th>
        <th>Assunto</th>
        <th>Sub-Assunto</th>
        <th>Descrição</th>
        <th>Prioridade</th>
        <th>Status</th>
        <th>Descrição Atualização</th>
        <th>Histórico de Atualizações</th>
        <th>Ações</th>
      </tr>
    </thead>
    <tbody>
      <% chamados.forEach(function(chamado) { %>
        <tr>
          <td><%= chamado.dataCriacao %></td>
          <td><%= chamado.nome %></td>
          <td><%= chamado.email %></td>
          <td><%= chamado.assunto %></td>
          <td><%= chamado.subAssunto %></td>
          <td><%= chamado.descricao %></td>
          <td><%= chamado.prioridade %></td>
          <td><%= chamado.status %></td>
          <td>
            <form action="/atualizar-status" method="POST">
              <input type="hidden" name="id" value="<%= chamado.id %>" />
              <select name="status" required>
                <option value="">Selecione</option>
                <option value="Aberto" <%= chamado.status === 'Aberto' ? 'selected' : '' %>>Aberto</option>
                <option value="Em análise" <%= chamado.status === 'Em análise' ? 'selected' : '' %>>Em análise</option>
                <option value="Em espera" <%= chamado.status === 'Em espera' ? 'selected' : '' %>>Em espera</option>
                <option value="Concluído" <%= chamado.status === 'Concluído' ? 'selected' : '' %>>Concluído</option>
              </select>
              <textarea name="descricaoAtualizacao" placeholder="Descrição da atualização"></textarea>
              <button type="submit" class="btn btn-update">Atualizar</button>
            </form>
          </td>
          <td>
            <div class="history">
              <% if (chamado.historico && chamado.historico.length > 0) { %>
                <% chamado.historico.forEach(function(h) { %>
                  <div class="history-entry">
                    <strong><%= h.data %> - <%= h.status %></strong><br />
                    <%= h.descricao %>
                  </div>
                <% }) %>
              <% } else { %>
                <em>Nenhuma atualização.</em>
              <% } %>
            </div>
          </td>
          <td></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>

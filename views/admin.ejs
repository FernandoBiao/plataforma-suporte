<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <title>Admin - Chamados</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4 text-center">Lista de Chamados</h2>

    <% if (chamados.length === 0) { %>
      <p class="text-center">Nenhum chamado encontrado.</p>
    <% } else { %>
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Data</th>
              <th>Nome</th>
              <th>E-mail</th>
              <th>Assunto</th>
              <th>Mensagem</th>
            </tr>
          </thead>
          <tbody>
            <% chamados.forEach(chamado => { %>
              <tr>
                <td><%= chamado.data %></td>
                <td><%= chamado.nome %></td>
                <td><%= chamado.email %></td>
                <td><%= chamado.assunto %></td>
                <td><%= chamado.mensagem %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>
</body>
</html>

<!-- views/admin.ejs -->
<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Admin - Chamados</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap"
    rel="stylesheet"
  />
  <style>
    body {
      font-family: "Inter", sans-serif;
      background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
      min-height: 100vh;
      padding: 40px 20px;
    }

    h1 {
      font-weight: 600;
      color: #111827;
      margin-bottom: 30px;
      text-align: center;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.07);
    }

    th,
    td {
      padding: 14px 18px;
      text-align: left;
      border-bottom: 1px solid #ddd;
    }

    th {
      background-color: #6366f1;
      color: white;
      font-weight: 600;
    }

    tr:hover {
      background-color: #f1f5f9;
    }

    .status-form {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .btn-update {
      background-color: #6366f1;
      border: none;
      color: white;
      padding: 8px 14px;
      border-radius: 8px;
      cursor: pointer;
      font-weight: 600;
      transition: background-color 0.2s;
      width: fit-content;
    }

    .btn-update:hover {
      background-color: #4f46e5;
    }

    textarea {
      resize: vertical;
      border-radius: 8px;
      padding: 8px;
      border: 1px solid #ccc;
      font-family: "Inter", sans-serif;
      font-size: 14px;
      min-height: 60px;
    }
  </style>
</head>
<body>
  <h1>Chamados</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Data Criação</th>
        <th>Nome</th>
        <th>Email</th>
        <th>Assunto</th>
        <th>Sub-Assunto</th>
        <th>Prioridade</th>
        <th>Status</th>
        <th>Descrição</th>
        <th>Atualizar Status</th>
      </tr>
    </thead>
    <tbody>
      <% chamados.forEach(function (chamado) { %>
      <tr>
        <td><%= chamado.id %></td>
        <td><%= chamado.dataCriacao %></td>
        <td><%= chamado.nome %></td>
        <td><%= chamado.email %></td>
        <td><%= chamado.assunto %></td>
        <td><%= chamado.subAssunto %></td>
        <td><%= chamado.prioridade %></td>
        <td><%= chamado.status %></td>
        <td><%= chamado.descricao %></td>
        <td>
          <form class="status-form" method="POST" action="/atualizar-status">
            <input type="hidden" name="id" value="<%= chamado.id %>" />
            <select name="status" required>
              <option value="Aberto" <%= chamado.status === 'Aberto' ? 'selected' : '' %>>
                Aberto
              </option>
              <option
                value="Em análise"
                <%= chamado.status === 'Em análise' ? 'selected' : '' %>
              >
                Em análise
              </option>
              <option
                value="Em espera"
                <%= chamado.status === 'Em espera' ? 'selected' : '' %>
              >
                Em espera
              </option>
              <option
                value="Concluído"
                <%= chamado.status === 'Concluído' ? 'selected' : '' %>
              >
                Concluído
              </option>
            </select>
            <textarea
              name="descricaoAtualizacao"
              placeholder="Descrição da atualização"
            ></textarea>
            <button type="submit" class="btn-update">Atualizar</button>
          </form>
          <% if (chamado.historico && chamado.historico.length > 0) { %>
          <details style="margin-top: 10px;">
            <summary>Histórico de atualizações</summary>
            <ul style="padding-left: 20px;">
              <% chamado.historico.forEach(function (item) { %>
              <li>
                <strong><%= item.data %></strong> - Status: <%= item.status %> -
                <%= item.descricao || 'Sem descrição' %>
              </li>
              <% }); %>
            </ul>
          </details>
          <% } %>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
</body>
</html>

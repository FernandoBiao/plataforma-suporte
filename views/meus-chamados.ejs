<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8" />
  <title>Meus Chamados</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      font-family: "Inter", sans-serif;
      background: linear-gradient(135deg, #f3f4f6, #e5e7eb);
      min-height: 100vh;
      padding: 40px 20px;
    }
    h1 {
      font-weight: 600;
      color: #111827;
      margin-bottom: 30px;
      text-align: center;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 10px 25px rgba(0, 0, 0, 0.07);
    }
    th, td {
      padding: 12px 15px;
      border-bottom: 1px solid #ddd;
      text-align: left;
    }
    th {
      background-color: #6366f1;
      color: white;
      font-weight: 600;
    }
    tr:hover {
      background-color: #f1f5f9;
    }
    details {
      margin-top: 10px;
    }
  </style>
</head>
<body>
  <h1>Meus Chamados</h1>
  <table>
    <thead>
      <tr>
        <th>ID</th>
        <th>Data Criação</th>
        <th>Assunto</th>
        <th>Sub-Assunto</th>
        <th>Prioridade</th>
        <th>Status</th>
        <th>Descrição</th>
        <th>Histórico</th>
      </tr>
    </thead>
    <tbody>
      <% chamados.forEach(chamado => { %>
        <tr>
          <td><%= chamado.id %></td>
          <td><%= chamado.dataCriacao %></td>
          <td><%= chamado.assunto %></td>
          <td><%= chamado.subAssunto %></td>
          <td><%= chamado.prioridade %></td>
          <td><%= chamado.status %></td>
          <td><%= chamado.descricao %></td>
          <td>
            <% if (chamado.historico && chamado.historico.length > 0) { %>
              <details>
                <summary>Ver histórico</summary>
                <ul>
                  <% chamado.historico.forEach(item => { %>
                    <li>
                      <strong><%= item.data %></strong> - Status: <%= item.status %> - <%= item.descricao || 'Sem descrição' %>
                    </li>
                  <% }); %>
                </ul>
              </details>
            <% } else { %>
              Sem histórico
            <% } %>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
